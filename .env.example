# Database Configuration
# For local development:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/nearbytix
# For Docker (use service names as hostnames):
DATABASE_URL=postgresql+asyncpg://nearbytix_user:nearbytix_pass@db:5432/nearbytix
DATABASE_ECHO=False

# Redis Configuration (for Celery)
# For local development:
# REDIS_URL=redis://localhost:6379/0
# For Docker:
REDIS_URL=redis://redis:6379/0

# Celery Configuration
# For local development:
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0
# For Docker:
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Application Settings
APP_NAME=NearbyTix
APP_VERSION=1.0.0
DEBUG=True
API_PREFIX=/api/v1

# CORS Settings (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Ticket Expiration (in seconds)
TICKET_EXPIRATION_TIME=120

# Geospatial Settings
DEFAULT_SEARCH_RADIUS_KM=50

# JWT Authentication Settings
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=
JWT_ALGORITHM=
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=
